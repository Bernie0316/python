pi=3.14159
print(pi)

first_num=6
second_num=2
#加法(+)減法(-)乘法(*)除法(/)次方(**)
print(first_num+second_num)
print(first_num- second_num)
print(first_num*second_num)
print(first_num/second_num)
print(first_num**second_num) 
#直接打入數字算也是可行的
#若想依序列出像是:62。用下面這個方法
str_ftist_num=str(first_num)
str_second_num=str(second_num)
print(str_ftist_num+str_second_num)

test_1=input('test_1:')
test_2=input('test_2:')
print(test_1+test_2)
#如果用外部輸入python不會做運算，只會幫你依序列出，來看解決方法
#int=整數相加/float=含小數點
print(int(test_1)+int(test_2))
print(float(test_1)+float(test_2))
#str:用於帶入數字+詞/#int用於帶入數字運算
print('====================================')

#接下來是數字加上文字
days_in_feb=28
#print(days_in_feb+' days in February')
#python 無法做出"數字"+"詞"，故要在底下加上"str"
print(str(days_in_feb)+' days in February')
#當然，不只有(str)可印出'文字+數字'
